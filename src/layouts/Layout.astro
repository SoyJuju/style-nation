---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Navbar from '../react/layouts/main/Navbar.jsx';

import Favicon from '../assets/logo-favicon.png';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Car Showroom" />
    <meta name="viewport" content="width=device-width" />
    <link type="image/png" sizes="16x16" rel="icon" href={Favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;500;700;900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Navbar client:load />
    <slot />
  </body>
</html>
